package it.uniroma3.spring.progettosiw.service;

import java.util.List;

import javax.transaction.Transactional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import it.uniroma3.siw.model.Fotografo;
import it.uniroma3.siw.repository.FotografoRepository;

@Service
public class RegistrazioneService {
	
	@Autowired
	private FotografoRepository fotografoRepository;
	
	@Transactional
	public void registraFotografo(Fotografo fotografo) {
		fotografoRepository.save(fotografo);
	}
	
	@Transactional
	public List<Fotografo> listaFotografi(){
		return (List<Fotografo>) fotografoRepository.findAll();
	}
}
